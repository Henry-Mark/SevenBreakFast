            android:name=".ui.FoodTextActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SiteActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.PasswdChangeActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
